# =============================================================================
# НАСТРОЙКИ ТОРГОВЛИ
# =============================================================================

# Торговый символ по умолчанию
# Примеры: BTCUSDT, ETHUSDT, SOLUSDT, BNBUSDT
SYMBOL=DOGE     USDT

# Таймфрейм для анализа
# Варианты: 1m, 5m, 15m, 1h, 4h, 1d
INTERVAL=1d 

# Количество свечей для анализа (50-500)
# Больше свечей = больше истории, но медленнее расчет
BARS_COUNT=150

# Количество уровней профиля (10-100)
# Больше уровней = более детальный профиль
ROW_SIZE=24

# Процент для Value Area (50-100)
# Обычно используется 70% (стандарт в трейдинге)
VALUE_AREA=70

# =============================================================================
# АВТОМАТИЧЕСКИЕ ОБНОВЛЕНИЯ
# =============================================================================

# Частота автоматических обновлений
# Варианты:
#   off     - выключено (только по команде /analyze)
#   minute  - каждую минуту (для тестирования)
#   hourly  - каждый час
#   daily   - каждый день в 9:00
UPDATE_FREQUENCY=off

